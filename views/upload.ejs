<!DOCTYPE html>
<html>

  <head>
    <script src='/bower_components/webcomponentsjs/webcomponents.js'></script>
    <script src='/public/js/jquery/jquery-1.11.2.min.js'></script>
    
    <link rel='import' href='/bower_components/paper-button/paper-button.html' />
  </head>
  
  <body>

    <paper-button raised>
      Upload
      <form id='upload_form' action='data_upload' method='post' enctype='multipart/form-data'>
        <input id='file_input' name='user_data' type='file' accept='.csv' style = 'opacity: 0'/>
      </form>
    </paper-button>

    <script>
      $('#file_input').on('change', function (event) {
        $('#upload_form').submit();
      });
    </script>
  </body>

</html>
