    <style shim-shadowdom>

    html,body {
      height: 100%;
    }

    body{
      margin: 0;
      font-family: sans-serif;
    }

    core-header-panel {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-color: #eee;
    }
    
    core-header-panel[mode=cover]::shadow #mainContainer {
      left: 70px;
    }

    .core-header {
      height: 60px;
      line-height: 60px;
      font-size: 28px;
      padding: 0 20px;
      background-color: #4F7DC9;
      color: #FFF;
      transition: height 0.2s;
    }
    
    .core-header.medium-tall {
      height: 120px;
    }

    .content {
      height: 1000px;
      background: linear-gradient(rgb(214, 227, 231), lightblue);
    }

    paper-button[raised]{
      font-size: 14px;
      padding: 3px;
      height: 30px;
      width: 110px;
      line-height: 1em;
    }

    paper-button[raised].hover:hover{
      background: #eee;
      font-size: 14px;
      padding: 3px;
      height: 30px;
      width: 110px;
      line-height: 1em;
    }

    section {
      padding: 24px;
    }

  </style>
  <style>
    #Mission{
        height:80%;
        background-color: #D1F0FF;
    }

    #Team{
        height:90%;
        background-color: #B2E6FF;
    }

    #Testimonials{
      height: 90%;
      background-color: #D1F0FF;
    }

    #Contact{
      height: 90%;
      background-color: #B2E6FF;
    }

    img.personal{
      max-width: 150px;
      max-height: auto;
      border-radius: 70%;
    }

    img.logo{
      max-width: auto;
      max-height: 150px;
    }

    center.standard{
      font-weight: bold;
      font-family: verdana;
      font-size: 200%;
      text-decoration: none;
      position: relative;
      top: 10%;
      transform: translateY(-50);
    }

/*    center.mission{
      position: relative;s
      top: 50%;
      transform: translateY(-50);
    }*/

    a.one{
      font-weight: bold;
      font-family: verdana;
      font-size: 1.25em;
      text-align: center;
      text-decoration: none;
    }

    a.one:link{
      color:#000000;

    }
    a.one:visited{
      color:#ffffff;
    }
    a.one:hover{
      color:#ffff00;
      text-shadow: 0 0 4px #999;
    }

    p{
      color: black;
      font-family: verdana;
      font-size: 150%;
    }

    p.test{

    }

    p.name{
